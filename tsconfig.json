{
  "compilerOptions": {
    "noImplicitAny": true,
    "jsx": "react",
    "lib": ["es2017", "dom"],
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@public/*": ["./public/*"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}